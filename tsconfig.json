{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": false,
        "noImplicitAny": false,
        "noImplicitReturns": false,
        "noImplicitThis": false,
        "pretty": true,
        "declaration": false,
        "skipDefaultLibCheck": false,
        "experimentalDecorators": true,
        "skipLibCheck": false,
        "allowSyntheticDefaultImports": true,
        "module": "commonjs",
        "target": "es5",
        "lib": [ "webworker", "scripthost", "es6", "es7", "dom" ],
        "jsx": "react"
    },
    "files": [
        "./src/typings/*.d.ts"
    ],
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "dist",
        "**/*.spec.ts"
    ]
}
